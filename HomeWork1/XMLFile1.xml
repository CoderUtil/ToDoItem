<?xml version="1.0" encoding="utf-8" ?>
<tile>
  <visual>

    <binding template="TileSmall">
      <text>title</text>
      <text hint-style="captionSubtle">description</text>
      <image src="Assets/background.jpg" placement="background"/>
    </binding>

    <binding template="TileMedium" branding="name">
      <text hint-wrap="true" hint-maxLines="2">title</text>
      <text hint-style="captionSubtle">description</text>
      <image src="Assets/background.jpg" placement="background"/>
    </binding>

    <binding template="TileWide" branding="nameAndLogo">
      <text>title</text>
      <text hint-style="captionSubtle">description</text>
      <image src="Assets/background.jpg" placement="background"/>
    </binding>
  </visual>
</tile>
